        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тип акумуляторів"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Літій-залізо-фосфатні (LiFePO4)"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вихідні інтерфейси"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• USB Type A (2 порти)\n• USB Type C (2 порти)\n• Європейська розетка (4 шт.)"
